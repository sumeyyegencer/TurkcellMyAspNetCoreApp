
@{
    ViewData["Title"] = "GetById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ProductViewModel
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<a asp-controller="products" asp-action="index" class="btn btn-success my-3"><i class="fa-solid fa-circle-arrow-left mx-2"></i>Ürünler Sayfasına Git </a>

<div class="card">
    <div class="card-header">
       @Model.Name
    </div>

    <div class="card-body">
        <p class="card-text">

            <div>Id: @Model.Id</div>
            <div>Açıklama: @Model.Description</div>
            <div>Fiyat: @Model.Price</div>
            <div>Stok: @Model.Stok</div>
            <div>Oluşturulma Tarihi: @Model.puslishDate </div>

        </p>
    </div>
</div>



