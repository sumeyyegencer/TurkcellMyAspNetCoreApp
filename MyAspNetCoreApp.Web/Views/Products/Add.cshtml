
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ProductViewModel

<h1>Ürün Ekleme</h1>

<form asp-controller="products" asp-action="add" method="post">
    <div class="mb-3">
    <label asp-for="Name" class="form-label"  >Ürün Adı:</label>
    <input type="text"class="form-control"  asp-for="Name"/>
    <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Fiyatı:</label>
        <input class="form-control" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stok" class="form-label">Stok:</label>
        <input  class="form-control" asp-for="Stok" />
        <span class="text-danger" asp-validation-for="Stok"></span>
    </div>

    <div class="mb-3">
     @*   <label asp-for="Color" class="form-label">Ürün Renk:</label>
        <input class="form-control" asp-for="Color" />*@
        <select class="form-select" asp-for="Color" asp-items="@ViewBag.ColorSelect">
            <option value="">Renk seçiniz</option>
            
        </select>
        <span class="text-danger" asp-validation-for="Color"></span>
    </div>
    
    <div class="form-check">
        <input class="form-check-input" asp-for=isPublish >
        <label class="form-check-label" asp-for="isPublish">
            Yayınlansın mı?
        </label>
    </div>

    <div class="form-group my-3">
        
        <textarea class="form-control" rows="10" asp-for="Description" placeholder="Ürün açıklaması giriniz..."></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="mb-3">
        <label asp-for="puslishDate" class="form-label">Yayınlanma Tarihi</label>
        <input class="form-control" asp-for="puslishDate" />
    </div>

    <button type="submit" class="btn btn-info text-white">Kaydet</button>
</form>

@*Client-Side Validation gereği servere gitmeden validation konrolleri client tarfta sağlanacakır.*@
    @section Scripts
    {
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }